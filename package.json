{
    "name": "postgres-readonly-mcp",
    "version": "1.0.1",
    "description": "MCP server for read-only PostgreSQL database access",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "postgres-readonly-mcp": "dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "prepublishOnly": "npm run build",
        "release": "node scripts/release.mjs patch",
        "release:patch": "node scripts/release.mjs patch",
        "release:minor": "node scripts/release.mjs minor",
        "release:major": "node scripts/release.mjs major",
        "release:dry-run": "node scripts/release.mjs patch --dry-run"
    },
    "keywords": [
        "mcp",
        "postgres",
        "postgresql",
        "database",
        "read-only",
        "model-context-protocol",
        "claude",
        "ai",
        "llm"
    ],
    "author": "Furkan Beydemir",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "pg": "^8.11.0",
        "dotenv": "^16.4.5"
    },
    "devDependencies": {
        "@types/node": "^20.14.0",
        "@types/pg": "^8.11.0",
        "tsx": "^4.15.0",
        "typescript": "^5.4.5",
        "vitest": "^1.6.0"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "engines": {
        "node": ">=18.0.0"
    }
}
